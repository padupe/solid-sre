{
    "openapi": "3.0.0",
    "info": {
        "title": "API Squads/Users",
        "description": "This is an API applying SOLID concepts",
        "version": "1.0.0",
        "contact": {
            "email": "peixoto.pauloeduardo@gmail.com"
        }
    },
    "paths": {
        "/sessions": {
            "post": {
                "tags": ["Session"],
                "summary": "Authentication User",
                "description": "Endpoint for authentication User",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "email": "admin@email.com",
                                    "password": "senha1234"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "401": {
                        "description": "User or Password Incorrect!"
                    }
                }
            }
        },
        "/users": {
            "post": {
                "tags": ["User"],
                "summary": "Create User",
                "description": "Create a new User",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/User"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User Created"
                    },
                    "404": {
                        "description": "User Already Exists!"
                    }
                }
            },
            "get": {
                "tags": ["User"],
                "summary": "Show all Users",
                "description": "List all registred Users",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "password": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "isAdmin": {
                                                "type": "boolean"
                                            },
                                            "created_at": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/squads": {
            "post": {
                "tags": ["Squad"],
                "summary": "Create a Squad",
                "description": "Create a new Squad",
                "security": [{ "bearerAuth": []}],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/Squad" 
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Squad Created"
                    },
                    "401": {
                        "description": "Invalid Token"
                    },
                    "404": [
                        {
                        "description": "Token missing!"
                    },
                    {
                        "description": "Squad Already Exists!"
                    }
                ]
                    
                }
            }
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                }
            },
            "example": {
                "name": "User Test",
                "email": "usertest@email.com",
                "password": "passwordTest"
            }
        },
        "Squad": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                }
            },
            "example": {
                "name": "SRE Team",
                "email": "sre-team@madeiramadeira.com.br"
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}